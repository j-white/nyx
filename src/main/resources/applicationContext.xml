<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.2.xsd">
 
	<context:annotation-config />
 
 	<bean id="nyx" class="math.nyx.Nyx"/>
	
	<bean id="signalFactory" class="math.nyx.core.SignalFactory"></bean>
	
	<bean id="fractalFactory" class="math.nyx.core.FractalFactory"></bean>

	<!-- Linear -->
	<bean id="linearPartitioningStrategy" class="math.nyx.framework.linear.LinearPartitioningStrategy"/>
	
	<bean id="averagingDecimationStrategy" class="math.nyx.framework.linear.AveragingDecimationStrategy"/>

	<!-- Square -->
	<bean id="squarePartitioningStrategy" class="math.nyx.framework.square.SquarePartitioningStrategy"/>

	<bean id="squareDecimationStrategy" class="math.nyx.framework.square.SquareDecimationStrategy"/>

	<!-- Affine -->
	<bean id="affineKernel" class="math.nyx.affine.AffineKernel"/>

	<bean id="imageCodec" class="math.nyx.framework.FractalCodec">
		<property name="name" value="imageCodec" />
		<property name="kernel" ref="affineKernel" />
		<property name="partitioningStrategy" ref="squarePartitioningStrategy" />
		<property name="decimationStrategy" ref="squareDecimationStrategy" />
	</bean>

	<bean id="audioCodec" class="math.nyx.framework.FractalCodec">
		<property name="name" value="audioCodec" />
		<property name="kernel" ref="affineKernel" />
		<property name="partitioningStrategy" ref="linearPartitioningStrategy" />
		<property name="decimationStrategy" ref="averagingDecimationStrategy" />
	</bean>

</beans>
